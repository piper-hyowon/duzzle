  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "DEBUG=app*,error*,debug* node ./node_modules/pm2/bin/pm2 start process.json && npm run poststart",
    "start:local": "cross-env NODE_ENV=local nest start --watch",
    "start:localdebug": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "cross-env NODE_ENV=dev nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=prod nest start --watch",
    "poststart": "node ./node_modules/pm2/bin/pm2 logs --raw",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
